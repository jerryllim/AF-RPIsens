<SelectPage>:
    id: selectpage
    GridLayout:
        rows: 5
        padding: sp(10)
        spacing: sp(10)

        BoxLayout:
            padding: [sp(10), 0]

            Label:
                text: "JO No. :"
                font_size: '32sp'
                text_size: self.size
                halign: 'left'
                valign: 'bottom'

        BoxLayout:
            padding: sp(10)
            spacing: sp(10)

            TextInput:
                id: job_entry
                font_size: '32sp'
                multiline: False
                keyboard_mode: 'managed'

            Button:
                text: "Scan"
                size_hint: (0.2, 1)
                on_release: selectpage.scan_barcode()

        BoxLayout:
            padding: sp(10)

            Button:
                text: "Start"
                size_hint: (0.2, 1)
                on_release: root.start_job()

        BoxLayout:
            size_hint: [1, 3]

            Image:
                id: camera_viewer


<AdjustmentPage>:
    BoxLayout:
        id: box_layout
        padding: sp(10)
        spacing: sp(10)
        orientation: 'vertical'

        BoxLayout:
            padding: sp(10)
            spacing: sp(10)
            orientation: 'horizontal'
            size_hint_y: None
            height: sp(75)

            Label:
                id: jo_no
                text_size: self.size
                halign: 'left'
                font_size: sp(30)

            Button:
                text: 'Next'
                size_hint_x: None
                width: sp(200)
                on_release: root.proceed_next()


<AdjustmentTabbedPanel>:
    do_default_tab: False

    TabbedPanelItem:
        text: 'Adjustments'
        AdjustmentTab:
            id: adjustment_tab

    TabbedPanelItem:
        text: 'Ink Key'

<AdjustmentTab>:
    orientation: 'horizontal'

    ScrollView:
        GridLayout:
            id: adjustment_grid
            cols: 2
            padding: sp(10)
            spacing: sp(10)
            orientation: 'vertical'
            size_hint: (1, None)
            height: self.minimum_height

    NumPadGrid:
        id: numpad


<AdjustmentTextInput>:
    multiline: False
    size_hint: (1, None)
    height: sp(50)
    input_filter: 'int'
    font_size: sp(25)

<AdjustmentLabel>:
    size_hint: (1, None)
    height: sp(50)
    font_size: sp(25)
    valign: 'top'

<NumPadGrid>:
    cols: 3
    padding: sp(10)
    spacing: sp(10)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.8
        Rectangle:
            pos: self.pos
            size: self.size

<NumPadButton>:
    font_size: sp(25)
    font_name: 'FreeSerif.ttf'
    bold: True


<RunPageLayout>:
    padding: sp(10)
    spacing: sp(10)
    orientation: 'vertical'

    BoxLayout:
        spacing: sp(10)
        orientation: 'horizontal'
        size_hint_y: None
        height: sp(150)

        BoxLayout:
            spacing: sp(10)
            orientation: 'vertical'

            Label:
                id: jo_no
                text_size: self.size
                halign: 'left'
                font_size: sp(30)

            Label:
                id: code
                text_size: self.size
                halign: 'left'
                size_hint_y: 0.5

            Label:
                id: desc
                text_size: self.size
                halign: 'left'
                size_hint_y: 0.5

        Button:
            text: "[b]Stop[/b]"
            size_hint: [0.3, 1]
            markup: True
            font_size: '32sp'
            background_normal: ''
            background_color: 1,0,0,1
            on_release: root.parent.wastage_popup(finish=True)

    Label:
        id: to_do
        size_hint_y: None
        height: sp(50)
        text_size: self.size
        halign: 'left'
        font_size: sp(40)

    BoxLayout:
        spacing: sp(10)
        orientation: 'horizontal'
        size_hint_y: None
        height: sp(50)

        Label:
            text: 'Counter: '
            text_size: self.size
            size_hint_x: None
            width: sp(180)
            halign: 'left'
            font_size: sp(40)

        Label:
            text: '{}'.format(root.counter)
            id: counter
            text_size: self.size
            halign: 'left'
            font_size: sp(40)

    Label:
        id: qc
        size_hint_y: None
        height: sp(20)
        text_size: self.size
        halign: 'left'

    BoxLayout:

    BoxLayout:
        orientation: 'horizontal'
        padding: sp(10)
        spacing: sp(10)
        canvas.before:
            Color:
                rgba: 0.25, 0.25, 0.25, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: 'Maintenance'

        Button:
            text: 'QC'

        Button:
            text: 'Wastage'
            on_release: root.parent.wastage_popup()

        Button:
            text: 'Log out'


<WastagePopUp>:
    title: 'Wastage'
    size_hint: (0.75, 0.75)
    current_label: current_label
    unit_spinner: unit_spinner
    add_label: add_label
    numpad: numpad

    BoxLayout:
        orientation: 'vertical'
        padding: sp(10)
        spacing: sp(10)

        BoxLayout:
            orientation: 'horizontal'
            spacing: sp(5)
            size_hint: (1, 0.2)

            Label:
                id: current_label
                padding_x: 5
                text_size: self.size
                halign: 'right'
                valign: 'middle'
                color: (0, 0, 0, 1)
                canvas.before:
                    Color:
                        rgb: (1, 1, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
            Spinner:
                id: unit_spinner
                size_hint: (0.2, 1)

        Label:
            id: add_label
            padding_x: 5
            text_size: self.size
            halign: 'right'
            valign: 'middle'
            size_hint: (1, 0.2)
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgb: (1, 1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

        NumPadGrid:
            id: numpad

        BoxLayout:
            id: button_box
            orientation: 'horizontal'
            spacing: sp(10)
            size_hint: (1, 0.2)

            Button:
                text: 'Dismiss'
                on_release: root.dismiss()


<EmployeeScanPage>:
    title_label: title_label
    employee_num: employee_num
    cancel_button: cancel_button
    confirm_button: confirm_button
    camera_viewer: camera_viewer

    GridLayout:
        cols: 1
        padding: sp(10)
        spacing: sp(10)

        BoxLayout:
            padding: [sp(10), 0]

            Label:
                id: title_label
                font_size: '32sp'
                text_size: self.size
                halign: 'left'
                valign: 'bottom'

        BoxLayout:
            padding: sp(10)
            spacing: sp(10)

            TextInput:
                id: employee_num
                font_size: '32sp'
                multiline: False

            Button:
                text: "Scan"
                size_hint: (0.2, 1)

        BoxLayout:
            spacing: sp(10)
            size_hint: (0.2, 1)

            Button:
                id: cancel_button
                text: "Cancel"

            Button:
                id: confirm_button
                text: "Confirm"

        Image:
            id: camera_viewer
            size_hint: [1, 3]

