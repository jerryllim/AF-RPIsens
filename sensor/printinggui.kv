<SelectPage>:
    id: selectpage
    GridLayout:
        rows: 5
        padding: sp(10)
        spacing: sp(10)

        BoxLayout:
            padding: [sp(10), 0]

            Label:
                text: "JO No. :"
                font_size: '32sp'
                text_size: self.size
                halign: 'left'
                valign: 'bottom'

        BoxLayout:
            padding: sp(10)
            spacing: sp(10)

            TextInput:
                id: job_entry
                font_size: '32sp'
                multiline: False
                keyboard_mode: 'managed'

            Button:
                text: "Scan"
                size_hint: (0.2, 1)
                on_release: selectpage.scan_barcode()

        BoxLayout:
            padding: sp(10)

            Button:
                text: "Start"
                size_hint: (0.2, 1)
                on_release: selectpage.start_job()

        BoxLayout:
            size_hint: [1, 3]

            Image:
                id: camera_viewer

<AdjustmentPageLayout>:
    id: adjustmentpage_layout
    padding: sp(10)
    spacing: sp(10)
    orientation: 'vertical'

    StackLayout:
        padding: sp(10)
        spacing: sp(10)
        orientation: 'rl-tb'
        size_hint_y: None
        height: sp(50)

        Button:
            text: 'Next'

    TabbedPanel:
        do_default_tab: False

        TabbedPanelItem:
            text: 'Adjustments'

        TabbedPanelItem:
            text: 'Ink Key'
            InkKeyTab:
                id: ink_key_tab

<AdjustmentTab>:
    ScrollLayout:
        GridLayout:
            id: adjustment_grid
            cols: 2
            padding: sp(10)
            spacing: sp(10)
            orientation: 'vertical'
            size_hint: (1, None)
            height: self.minimum_height

            AdjustmentLabel:
                text: 'Size: '

            AdjustmentTextInput:
                id: size_entry

            AdjustmentLabel:
                text: 'Ink: '

            AdjustmentTextInput:
                id: ink_entry

            AdjustmentLabel:
                text: 'Plate: '

            AdjustmentTextInput:
                id: plate_entry

            AdjustmentLabel:
                text: 'Load: '

            AdjustmentTextInput:
                id: load_entry

            AdjustmentLabel:
                text: 'Unload: '

            AdjustmentTextInput:
                id: unload_entry

            AdjustmentLabel:
                text: 'Blanket/Packing: '

            AdjustmentTextInput:
                id: blanket_entry

    BoxLayout:
        id: numpad_box


<AdjustmentTextInput>:
    multiline: False
    size_hint: (1, None)
    height: sp(50)
    input_filter: 'int'
    font_size: sp(25)

<AdjustmentLabel@Label>:
    size_hint: (1, None)
    height: sp(50)
    font_size: sp(25)
    valign: 'top'

<NumPadGrid>:
    cols: 3
    padding: sp(10)
    spacing: sp(10)






